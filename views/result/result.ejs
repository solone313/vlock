<!DOCTYPE HTML>
<% include ../header %>

<html>
    <head> 
            <style type="text/css">
                @charset "utf-8"; 
                /* Vertical Bar Graph */
                .vGraph{ padding:20px 0;}
                .vGraph ul{ margin:0; padding:0; height:200px; border:1px solid #ddd; border-top:0; border-right:0; font-size:11px; font-family:Tahoma, Geneva, sans-serif; list-style:none;}
                .vGraph ul:after{ content:""; display:block; clear:both;}
                .vGraph li{ float:left; display:inline; width:8%; height:100%; margin:0 3%; position:relative; text-align:center; white-space:nowrap;}
                .vGraph .gTerm{ position:relative; display:inline-block; width:100%; height:20px; line-height:20px; margin:0 -100% -20px 0; padding:200px 0 0 0; vertical-align:bottom; color:#767676; font-weight:bold;}
                .vGraph .gBar{ position:relative; display:inline-block; width:100%; margin:-1px 0 0 0; border:1px solid #ccc; border-bottom:0; background:#e9e9e9; vertical-align:bottom;}
                .vGraph .gBar span{ position:absolute; width:100%; top:-20px; left:0; color:#767676;}
                </style>    
                
    </head>
    <body>
	<article>
		<h1>[Result]</h1>
        <div id=result>
           
            <% var _list = JSON.stringify(candidate)
        _list = JSON.parse(_list)
        var sum = 0
        for (var i=0; i < _list.length; i++ ) {
            sum += _list[i]["vote_num"];
        }
        %> 
        </br></br>
        <table border="1" bordercolor="skyblue" width="500" height="60" align="center\">
                <td>기호</td>
                <td>이름</td>
                <td>정당</td>
                <td>득표수</td>
                <% for(var i=0;i<_list.length;i++){%>
                <tr  align ="center">
                    <td><%=_list[i]["idx"]+1%></td>
                    <td><%=_list[i]["name"]%></td>
                    <td><%=_list[i]["party"]%></td>
                    <td><%=_list[i]["vote_num"]%></td>
                </tr>
                <%}%>
        </table>
            <h1 align="center">기호 <%=_list[0]["idx"]+1%>번 <%=_list[0]["name"]%> 후보자 당선</h1>
        </div>
    </article>
    <article>
    </br></br>
    <div class="vGraph" style="left: 100px; top: 200px; width:300;height:20;">
        <ul>
        <% for(var i=0;i<_list.length;i++){%>
            <%if(_list[i]["vote_num"]/sum>0.9&&_list[i]["vote_num"]/sum<=1){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 100%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>    
            <%if(_list[i]["vote_num"]/sum>0.8&&_list[i]["vote_num"]/sum<=0.9){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 90%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
            <%if(_list[i]["vote_num"]/sum>0.7&&_list[i]["vote_num"]/sum<=0.8){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 80%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>  
            <%if(_list[i]["vote_num"]/sum>0.6&&_list[i]["vote_num"]/sum<=0.7){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 70%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%> 
            <%if(_list[i]["vote_num"]/sum>0.5&&_list[i]["vote_num"]/sum<=0.6){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 60%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
            <%if(_list[i]["vote_num"]/sum>0.4&&_list[i]["vote_num"]/sum<=0.5){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 50%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
            <%if(_list[i]["vote_num"]/sum>0.3&&_list[i]["vote_num"]/sum<=0.4){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 40%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
            <%if(_list[i]["vote_num"]/sum>0.2&&_list[i]["vote_num"]/sum<=0.3){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 30%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
            <%if(_list[i]["vote_num"]/sum>0.1&&_list[i]["vote_num"]/sum<=0.2){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 20%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
            <%if(_list[i]["vote_num"]/sum<=0.1){%>
                <li><span class="gTerm"><%=_list[i]["name"] %></span><span class="gBar" style="height: 10%"><span><%=_list[i]["vote_num"]%></span></span></li>
            <%}%>
        <%}%>
        </ul>
        </div>
    </article>
    </body>
</html>

<% include ../footer %>

